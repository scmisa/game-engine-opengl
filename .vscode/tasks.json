{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-windows",
      "type": "shell",
      "command": "cl.exe",
      "args": [
        "/EHsc",
        "/MD",
        "/I",
        "C:/Users/Jakub/vcpkg/installed/x64-windows/include",
        "/I",
        "./include",
        "${file}",
        "/link",
        "/LIBPATH:C:/Users/Jakub/vcpkg/installed/x64-windows/lib",
        "/LIBPATH:./lib",
        "glfw3dll.lib",
        "glad.lib",
        "opengl32.lib",
        "legacy_stdio_definitions.lib",
        "/OUT:${fileDirname}/${fileBasenameNoExtension}.exe",
        "/machine:x64"
      ],
      "group": "build",
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "build-linux",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-I/home/${env:USER}/vcpkg/installed/x64-linux/include",
        "-I./include",
        "${file}",
        "-L/home/${env:USER}/vcpkg/installed/x64-linux/lib",
        "-L./lib",
        "-lglfw",
        "-lglad",
        "-lGL",
        "-ldl",
        "-lpthread",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    }
  ]
}
